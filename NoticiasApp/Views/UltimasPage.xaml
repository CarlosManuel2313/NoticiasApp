<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:NoticiasApp.ViewModels"
    xmlns:models="clr-namespace:NoticiasApp.Models"
    x:Class="NoticiasApp.Views.UltimasPage"
    Title="Ãšltimas"
    x:DataType="viewmodels:NoticiasViewModel">
    
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="AliceBlue" Offset="0.0"/>
            <GradientStop Color="LightGreen" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>
    <CollectionView ItemsSource="{Binding UltimasNoticias}">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="models:Noticia">
                <Border Stroke="LightBlue" StrokeThickness="1" Margin="10" Padding="10" StrokeShape="RoundRectangle 5">
                    <VerticalStackLayout>
                        <Label Text="{Binding Titulo}" FontAttributes="Bold" FontSize="18"
                               TextColor="Purple"/>
                        <Label Text="{Binding Contenido}" FontSize="14"/>
                    </VerticalStackLayout>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
